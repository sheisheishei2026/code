.image-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.image-item {
  width: calc(49.5%);
  border-radius: 2px;
  overflow: hidden;
  /* box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); */
}

.image-item2 {
  border-radius: 2px;
  object-fit: fill;
  overflow: hidden;
}

.container {
  padding: 30rpx; /* 容器整体内边距 */
  background-color: #f5f5f5;
}

.section {
  margin-bottom: 40rpx;
}

.text-block {
  padding: 20rpx; /* 文字块内边距 */
  background-color: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.paragraph {
  font-size: 28rpx;
  line-height: 42rpx; /* 行高调整 */
  color: #666;
  margin-bottom: 15rpx; /* 段落底部间距 */
  word-wrap: break-word; /* 自动换行 */
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.article-image {
  width: 100%;
  height: auto;
  margin: 0;
  border-radius: 0rpx;
  /* box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1); */
}