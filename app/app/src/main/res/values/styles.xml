<resources>

    <style name="game_button">
        <!--<item name="android:background">@drawable/abc_btn_default_mtrl_shape</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ff23b76e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NumberKeyStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/number_key_background</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">22sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 筛选按钮通用样式 -->
    <style name="FilterButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/btn_filter_background</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 重置按钮样式（文字颜色不同） -->
    <style name="FilterButtonResetStyle" parent="FilterButtonStyle">
        <item name="android:textColor">#666666</item>
    </style>

    <!-- 自定义 CalendarView 样式 -->
    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:textSize">20sp</item>
        <!-- 可选：修改其他颜色 -->
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayText</item>
        <item name="android:dateTextAppearance">@style/CustomDateText</item>
    </style>

    <!-- 周几文字样式 -->
    <style name="CustomWeekDayText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <!-- 日期文字样式 -->
    <style name="CustomDateText" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0000FF</item>
    </style>

</resources>
