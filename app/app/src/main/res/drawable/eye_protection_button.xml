<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF6B6B"
                android:endColor="#FF8E53"
                android:type="linear" />
            <corners android:radius="25dp" />
            <padding
                android:left="24dp"
                android:top="14dp"
                android:right="24dp"
                android:bottom="14dp" />
        </shape>
    </item>

    <!-- 启用状态 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FFA726"
                android:endColor="#AA8A65"
                android:type="linear" />
            <corners android:radius="25dp" />
            <padding
                android:left="24dp"
                android:top="14dp"
                android:right="24dp"
                android:bottom="14dp" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FFA726"
                android:endColor="#FF8A65"
                android:type="linear" />
            <corners android:radius="25dp" />
            <padding
                android:left="24dp"
                android:top="14dp"
                android:right="24dp"
                android:bottom="14dp" />
        </shape>
    </item>
</selector>











