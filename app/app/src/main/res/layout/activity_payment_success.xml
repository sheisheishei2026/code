        <!-- 左侧：绿色对话框图标 + 支付成功文字 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
                android:gravity="center">

            <!-- 绿色对话框图标（带对勾） -->
<!--            <FrameLayout-->
<!--                android:layout_width="32dp"-->
<!--                android:layout_height="32dp"-->
<!--                android:layout_marginEnd="8dp">-->

<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
